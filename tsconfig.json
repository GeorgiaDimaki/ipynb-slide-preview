{
	"compilerOptions": {
	  "module": "commonjs",
	  "target": "es2020", // Or a suitable target ES version
	  "outDir": "out",
	  "lib": [
		"es2020",
		"DOM",
		"DOM.Iterable"
	  ],
	  "sourceMap": true,
	  "rootDir": "src",
	  "strict": true,   /* Enable all strict type-checking options. */
	  "skipLibCheck": true /* Skip type checking of declaration files. */
	  /* You might need additional options depending on your setup */
	},
	"include": [
	  "src/**/*"
	],
	"exclude": [
	  "node_modules",
	  ".vscode-test",
	  "media",
	  "out"
	]
}