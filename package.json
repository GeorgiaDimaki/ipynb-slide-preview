{
  "name": "ipynb-slide-preview",
  "displayName": "IPYNB Slide Preview",
  "version": "0.0.1",
  "license": "SEE LICENSE IN LICENSE.md",
  "engines": {
    "vscode": "^1.85.0"
  },
  "extensionDependencies": [
    "ms-python.python"
  ],
  "contributes": {
    "icons": {
      "slideshow-icon": {
        "description": "Slideshow Preview Icon",
        "default": {
          "fontPath": "./media/slideshow-font.ttf",
          "fontCharacter": "\\e900"
        }
      }
    },
    "customEditors": [
      {
        "viewType": "ipynb.slidePreview",
        "displayName": "IPYNB Slide Preview",
        "selector": [
          {
            "filenamePattern": "*.ipynb"
          }
        ],
        "priority": "option"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ipynb-slide-preview.open",
          "when": "resourceExtname ==.ipynb",
          "group": "navigation@6"
        }
      ],
      "commandPalette": [
        {
          "command": "ipynb-slide-preview.open",
          "when": "resourceExtname ==.ipynb"
        }
      ],
      "editor/title/context": [
        {
          "command": "ipynb-slide-preview.open",
          "when": "resourceExtname ==.ipynb",
          "group": "navigation"
        }
      ],
      "notebook/toolbar": [
        {
          "command": "ipynb-slide-preview.open",
          "when": "notebookType == 'jupyter-notebook'",
          "group": "navigation@5"
        }
      ]
    },
    "commands": [
      {
        "command": "ipynb-slide-preview.open",
        "title": "Open with IPYNB Slide Editor",
        "icon": "$(slideshow-icon)",
        "shortTitle": "Slides"
      }
    ]
  },
  "main": "./out/extension.js",
  "publisher": "",
  "description": "A VS Code extension to preview Jupyter Notebooks as interactive slide decks",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:ipynb.slidePreview",
    "onNotebook:jupyter-notebook"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node ./build.js",
    "package": "cross-env NODE_ENV=production node./build.js",
    "watch": "npm run compile -- --watch",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/marked": "^6.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.3",
    "eslint": "^9.23.0",
    "fs-extra": "^11.3.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@jupyterlab/services": "^7.4.3",
    "@types/dompurify": "^3.2.0",
    "@types/node-fetch": "^2.6.12",
    "@vscode/codicons": "^0.0.36",
    "marked": "^15.0.11",
    "monaco-editor": "^0.52.2",
    "node-fetch": "^2.7.0",
    "zeromq": "^6.4.2"
  }
}
