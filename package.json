{
  "name": "ipynb-slide-preview",
  "displayName": "IPYNB Slide Preview",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "contributes": {
    "customEditors": [
      {
        "viewType": "ipynb.slidePreview",
        "displayName": "IPYNB Slide Preview",
        "selector": [
          {
            "filenamePattern": "*.ipynb"
          }
        ],
        "priority": "option"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ipynb-slide-preview.open",
          "when": "resourceExtname ==.ipynb",
          "group": "navigation@6"
        }
      ],
      "commandPalette": [
        {
          "command": "ipynb-slide-preview.open",
          "when": "resourceExtname ==.ipynb"
        }
      ],
      "editor/title/context": [
        {
          "command": "ipynb-slide-preview.open",
          "when": "resourceExtname ==.ipynb",
          "group": "navigation"
        }
      ]
    }
  },
  "commands": [
    {
      "command": "ipynb-slide-preview.open",
      "title": "Open with IPYNB Slide Editor"
    }
  ],
  "main": "./out/extension.js",
  "publisher": "",
  "description": "A VS Code extension to preview Jupyter Notebooks as interactive slide decks",
  "categories": [
    "Other"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node ./build.js",
    "package": "cross-env NODE_ENV=production node./build.js",
    "watch": "npm run compile -- --watch",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/marked": "^6.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.3",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@types/dompurify": "^3.2.0",
    "marked": "^15.0.11",
    "monaco-editor": "^0.52.2"
  }
}
